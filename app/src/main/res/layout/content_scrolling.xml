    <body>
        <div class="container">
            <div class="header">
                <h1>Request Features</h1>
                <p>We'd love to hear your ideas to improve our app</p>
            </div>
            <div class="form-container" id="formContainer">
                <form id="featureRequestForm" name="featureRequestForm">
                    <div class="form-group"><label for="featureRequest">Your feature
                        request*</label>
                        <textarea id="featureRequest" name="featureRequest" placeholder=
                            "Please describe the feature you'd like to see in our app..."
                            required=""></textarea></div>
                    <div class="form-group"><label for="moreContext">Giving more
                        context about your request helps us to improve the app even
                        better.</label>
                        <textarea id="moreContext" name="moreContext" placeholder=
                            "Add any additional context, use cases, or examples that might help us understand your request...">
                        </textarea></div>
                    <div class="checkbox-group"><input type="checkbox" id=
                        "willingToAnswer" /> <label for="willingToAnswer">Would you be
                        willing to answer more questions about your request?</label></div>
                    <div class="optional-fields" id="optionalFields">
                        <div class="form-group"><label for="userName">Your Name</label>
                            <input type="text" id="userName" name="userName" placeholder=
                                "Enter your name" /></div>
                        <div class="form-group"><label for="userEmail">Your Email*</label>
                            <input type="email" id="userEmail" name="userEmail" placeholder=
                                "Enter your email address" /></div>
                    </div>
                    <div class="button-group"><button type="submit" class=
                        "submit-btn">Submit</button> <button type="button" class=
                        "clear-btn" id="clearBtn">Clear Form</button></div>
                </form>
            </div>
            <div class="thank-you" id="thankYouMessage">
                <h2>Thank You!</h2>
                <p>We appreciate your feedback and will review your feature request
                    shortly.</p>
            </div>
        </div>
        <script>
            <![CDATA[
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('featureRequestForm');
        const clearBtn = document.getElementById('clearBtn');
        const willingCheckbox = document.getElementById('willingToAnswer');
        const optionalFields = document.getElementById('optionalFields');
        const formContainer = document.getElementById('formContainer');
        const thankYouMessage = document.getElementById('thankYouMessage');

        // Toggle optional fields based on checkbox
        willingCheckbox.addEventListener('change', function() {
            if (this.checked) {
                optionalFields.classList.add('show');
            } else {
                optionalFields.classList.remove('show');
            }
        });

        // Clear form
        clearBtn.addEventListener('click', function() {
            form.reset();
            optionalFields.classList.remove('show');
            willingCheckbox.checked = false;
        });

        // Form submission
        form.addEventListener('submit', function(e) {
            e.preventDefault();

            // Get form values
            const featureRequest = document.getElementById('featureRequest').value;
            const moreContext = document.getElementById('moreContext').value;
            const willingToAnswer = document.getElementById('willingToAnswer').checked;
            const userName = document.getElementById('userName').value;
            const userEmail = document.getElementById('userEmail').value;

            // Validate if user checked the box but didn't provide email
            if (willingToAnswer && !userEmail) {
                alert('Please provide your email address if you are willing to answer more questions.');
                return;
            }

            // Create email content
            let subject = 'Feature Request for SmartWOD App';
            let body = Feature Request: ${featureRequest}%0D%0A%0D%0A;
            body += Additional Context: ${moreContext}%0D%0A%0D%0A;
            body += Willing to answer more questions: ${willingToAnswer ? 'Yes' : 'No'}%0D%0A;

            if (willingToAnswer) {
                body += User Name: ${userName}%0D%0A;
                body += User Email: ${userEmail};
            }

            // Open email client (replace with your email address)
            const email = 'your-email@example.com';
            window.location.href = mailto:${email}?subject=${subject}&body=${body};

            // Show thank you message
            formContainer.style.display = 'none';
            thankYouMessage.style.display = 'block';
        });
    });
]]>
