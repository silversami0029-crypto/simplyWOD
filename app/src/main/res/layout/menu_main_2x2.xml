<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simplywod"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Grid Layout for Buttons (2x2) -->
    <GridLayout
        android:id="@+id/buttonGrid"
        android:layout_width="48dp"
        android:layout_height="0dp"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_margin="24dp"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomIconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- AMRAP Button -->
        <Button
            android:id="@+id/amrap"
            android:layout_width="48dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_custom_selector_amrap"
            android:text="@string/amrap"
            android:textColor="@color/white"
            android:textSize="16sp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <!-- EMOM Button -->
        <Button
            android:id="@+id/emom"
            android:layout_width="48dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_custom_selector"
            android:text="@string/emom"
            android:textColor="@color/white"
            android:textSize="16sp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <!-- FOR TIME Button -->
        <Button
            android:id="@+id/fortime"
            android:layout_width="48dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_custom_selector_fortime"
            android:text="@string/for_time"
            android:textColor="@color/white"
            android:textSize="16sp"
            style="@style/Widget.AppCompat.Button.Borderless" />

        <!-- TABATA Button -->
        <Button
            android:id="@+id/tabata"
            android:layout_width="48dp"
            android:layout_height="120dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_margin="8dp"
            android:background="@drawable/button_custom_selector_tabata"
            android:text="@string/tabata"
            android:textColor="@color/white"
            android:textSize="16sp"
            style="@style/Widget.AppCompat.Button.Borderless" />

    </GridLayout>

    <!-- Bottom Icons -->
    <LinearLayout
        android:id="@+id/bottomIconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/adView_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnAnalytics"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_analytics"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:id="@+id/btnLog"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_history"
            android:background="?attr/selectableItemBackgroundBorderless" />

    </LinearLayout>

    <!-- Ad Banner -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_id_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>