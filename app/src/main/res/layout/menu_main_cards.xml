<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bessadi.fitwod.Menu_Activity">

    <!-- Settings Icon Top Right -->
    <ImageButton
        android:id="@+id/btnSettings"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_settings"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/settings"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"/>

    <!-- App Title -->
    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="simplyWOD"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        android:letterSpacing="0.02"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSettings"
        android:layout_marginTop="8dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline60"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.60" />

    <!-- Main Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainCard"
        android:layout_width="@dimen/width_250"
        android:layout_height="@dimen/height_250"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppTitle"
        app:layout_constraintBottom_toTopOf="@+id/bottomIconContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:rowCount="2"
            android:padding="20dp"
            android:background="@android:color/transparent">

            <!-- AMRAP Button with Icon -->
            <LinearLayout
                android:id="@+id/amrap"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/button_custom_selector_amrap"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/width_xs"
                    android:layout_height="@dimen/height_32"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_amrap"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AMRAP"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- EMOM Button with Icon -->
            <LinearLayout
                android:id="@+id/emom"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/button_custom_selector"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/width_xs"
                    android:layout_height="@dimen/height_32"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_emom"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="EMOM"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- FOR TIME Button with Icon -->
            <LinearLayout
                android:id="@+id/fortime"
                android:layout_width="48dp"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/button_custom_selector_fortime"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/width_xs"
                    android:layout_height="@dimen/height_32"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_fortime"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FOR TIME"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- TABATA Button with Icon -->
            <LinearLayout
                android:id="@+id/tabata"
                android:layout_width="@dimen/width_xs"
                android:layout_height="0dp"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                android:gravity="center"
                android:orientation="vertical"
                android:background="@drawable/button_custom_selector_tabata"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="@dimen/width_xs"
                    android:layout_height="@dimen/height_32"
                    android:layout_marginBottom="8dp"
                    android:src="@drawable/ic_tabata_1"
                    app:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TABATA"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </GridLayout>
    </androidx.cardview.widget.CardView>

    <!-- Bottom Icons Container -->
    <LinearLayout
        android:id="@+id/bottomIconContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/adView_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Analytics Icon -->
        <ImageButton
            android:id="@+id/btnAnalytics"
            android:layout_width="@dimen/width_xs"
            android:layout_height="@dimen/height_xs"
            android:layout_marginEnd="3dp"
            android:src="@drawable/analytics"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:contentDescription="Analytics" />

        <!--Trophy-->
        <ImageButton
            android:id="@+id/btnAchieve"
            android:layout_width="@dimen/width_xs"
            android:layout_height="@dimen/height_xs"
            android:src="@drawable/trophy"
            android:layout_marginEnd="3dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="achi"
            tools:ignore="ContentDescription" />

        <!-- Log Icon -->
        <ImageButton
            android:id="@+id/btnLog"
            android:layout_width="@dimen/width_xs"
            android:layout_height="@dimen/height_xs"
            android:src="@drawable/ic_history"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Workout Log" />




    </LinearLayout>

    <!-- Ad Banner -->
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        app:adUnitId="@string/banner_id_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu"
        android:visibility="visible"
        app:layout_constraintEnd_toStartOf="@+id/tvAppTitle"
        app:layout_constraintHorizontal_bias="0.144"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
