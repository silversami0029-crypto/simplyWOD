<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FAFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="24dp"
            android:paddingBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/simplywod_premium"
                android:textSize="24sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unlock_features"
                android:textSize="16sp"
                android:textColor="#666"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Three Subscription Options in Horizontal Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp"
            android:weightSum="3">

            <!-- Monthly Option -->
            <LinearLayout
                android:id="@+id/monthly_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/subscription_option_bg"
                android:padding="16dp"
                android:layout_marginEnd="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#1"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/month"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="£1.69 "
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/most_popular"
                    android:textSize="12sp"
                    android:textColor="#2196F3"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Quarterly Option -->
            <LinearLayout
                android:id="@+id/yearly_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/subscription_option_bg"
                android:padding="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#12"
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/months"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="£9.99"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yearly"
                    android:textSize="12sp"
                    android:textColor="#2196F3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Yearly Option -->
            <LinearLayout
                android:id="@+id/life_time_option"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:background="@drawable/subscription_option_bg_selected"
                android:padding="16dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/one_off"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fit_ever"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="£24.99"
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:text="@string/single_payment"
                    android:textColor="#2196F3"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Feature List -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/features_bg"
            android:padding="16dp">

            <!-- Feature 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/tv_premium_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upgrade to Premium to access this feature"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="32dp"
                    android:visibility="gone"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="8dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Access the MIX timer option"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Combine multiple timers to create your own workout flow."
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Feature 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/remove_adds"
                    android:textSize="16sp"
                    android:textColor="#000" />

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/train_with"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Feature 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Save timers as presets"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:visibility="gone"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Access your most frequently used timers faster and easier."
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"/>

            <!-- Feature 4 -->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="•"
                android:textSize="16sp"
                android:textColor="#000"
                android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="1"
                    android:text="@string/access_analytics"
                    android:textColor="#000"
                    android:textSize="16sp" />

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customize_analytics"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp" />
            <!-- Feature 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/backgrouns_image"
                    android:textSize="16sp"
                    android:textColor="#000" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/customize_backgrouns_image"
                android:textSize="14sp"
                android:textColor="#666"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp" />

            <!-- Feature 6 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="•"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_marginRight="8dp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/and_even_more"
                    android:textSize="16sp"
                    android:textColor="#000" />

            </LinearLayout>

            <TextView




                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:text="@string/back_up_data"
                android:textColor="#666"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Upgrade Button -->
        <Button
         android:id="@+id/btn_subscribe"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="@string/upgrade_now"
         android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="#2196F3"
            android:padding="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp" />
        <Button
        android:id="@+id/btn_test_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Monthly"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_achievements"
        android:padding="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp" android:visibility="gone"/>
        <Button
            android:id="@+id/btn_test_failure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Failure"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#FFF"
            android:background="@drawable/button_achievements"
            android:padding="16dp"
            android:visibility="gone"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            />


        <!-- Terms and Conditions -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/per_year"
            android:textSize="12sp"
            android:textColor="#666"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

    </LinearLayout>
</ScrollView>