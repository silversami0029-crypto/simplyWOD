<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/menu_background"
    android:elevation="16dp"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tvTimers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Timers"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="12sp"
        android:textColor="@color/blue1"
        android:fontFamily="sans-serif-light"
        android:drawablePadding="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"/>
    <TextView
        android:id="@+id/tvVideoNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Video note"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="12sp"
        android:textColor="@color/blue1"
        android:fontFamily="sans-serif-light"
        android:drawablePadding="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"/>
    <TextView
        android:id="@+id/tvVoiceNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Voice note"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="12sp"
        android:textColor="@color/blue1"
        android:fontFamily="sans-serif-light"
        android:drawablePadding="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"/>
    <TextView
        android:id="@+id/tvItemLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Workout Log"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="12sp"
        android:textColor="@color/blue1"
        android:fontFamily="sans-serif-light"
        android:drawablePadding="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/tvRecommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Recommend the app"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="12sp"
        android:textColor="@color/blue1"
        android:fontFamily="sans-serif-light"
        android:drawablePadding="16dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="#EEEEEE"/>

    <TextView
        android:id="@+id/tvRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rate the app"
        android:padding="16dp"
        android:paddingStart="24dp"
        android:paddingEnd="48dp"
        android:paddingVertical="14dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:textSize="12sp"
        android:textColor="@color/blue1"
        android:fontFamily="sans-serif-light"
        android:drawablePadding="16dp"/>

</LinearLayout>