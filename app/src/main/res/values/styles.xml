<?xml version="1.0" encoding="utf-8"?>

    <resources>
        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
            <!-- Primary colors -->
            <item name="colorPrimary">@color/colorPrimaryLight</item>
            <item name="colorPrimaryDark">@color/black</item>
            <item name="colorAccent">@color/blue</item>

            <!-- Background colors -->
            <item name="android:windowBackground">@color/white</item>
            <item name="colorBackground">@color/white</item>

            <!-- TEXT AND FONT SETTINGS -->
            <item name="android:textColor">@color/black</item>
            <item name="android:textColorPrimary">@color/black</item>
            <item name="android:textColorSecondary">@color/black</item>
            <item name="android:fontFamily">sans-serif-medium</item>
            <item name="android:textSize">16sp</item>

            <!-- ActionBar styling -->
            <item name="actionBarStyle">@style/MyActionBarStyle</item>
            <item name="actionMenuTextColor">@color/black</item>

            <!-- Control colors -->
            <item name="colorControlNormal">@color/black</item>
            <item name="colorControlActivated">@color/black</item>

            <!-- Status bar -->
            <!--<item name="android:statusBarColor">@color/white</item>
            <item name="android:windowLightStatusBar">true</item>-->

            <!-- Status bar - MAKE TRANSPARENT for edge-to-edge -->
            <item name="android:statusBarColor">@android:color/transparent</item>
            <item name="android:windowLightStatusBar">true</item>
            <!-- Optional: Also make navigation bar transparent if needed -->
            <item name="android:navigationBarColor">@android:color/transparent</item>

            <!-- Button styles -->
            <item name="buttonStyle">@style/Widget.FitWOD.Button</item>

            <!-- ADD THESE 2 LINES -->
            <item name="actionBarTheme">@style/MyActionBarThemeOverlay</item>
            <item name="android:windowLightStatusBar">true</item>
        </style>

        <!-- ADD THIS SIMPLE STYLE -->
        <style name="MyActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:textColorPrimary">@color/black</item>
            <item name="android:textColorSecondary">@color/black</item>
            <item name="colorControlNormal">@color/black</item>
        </style>

        <!-- Keep all your existing styles below -->
        <style name="OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
            <item name="android:tint">@color/black</item>
        </style>

        <style name="MyActionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
            <item name="background">@color/white</item>
            <item name="titleTextColor">@color/black</item>
            <item name="subtitleTextColor">@color/black</item>
            <item name="actionMenuTextColor">@color/black</item>
            <item name="android:fontFamily">sans-serif-medium</item>
        </style>

        <style name="MyPopupMenu" parent="Widget.AppCompat.PopupMenu">
            <item name="android:popupBackground">@color/white</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:textSize">16sp</item>
            <item name="android:fontFamily">sans-serif-medium</item>
            <item name="android:dividerHeight">1dp</item>
            <item name="android:divider">@color/gray_light</item>
        </style>

    <style name="CustomDatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorAccent">@color/blue1</item>
        <item name="colorPrimary">@color/blue1</item>
    </style>

        <style name="ThemeOverlay.App.Popup" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:windowBackground">@android:color/transparent</item>
            <item name="android:colorBackground">@android:color/white</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:background">@android:color/white</item>
        </style>

        <style name="Widget.FitWOD.Button" parent="Widget.AppCompat.Button">
            <item name="android:backgroundTint">@color/white</item>
            <item name="android:textColor">@color/black</item>
            <item name="android:fontFamily">sans-serif</item>
        </style>
    </resources>
