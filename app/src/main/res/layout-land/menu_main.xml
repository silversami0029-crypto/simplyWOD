<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context="com.example.fitwod.Menu_Activity">


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_main"
        android:layout_width="399dp"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_id_1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.950"/>


    <ImageButton
        android:id="@+id/amrap"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginTop="144dp"
        android:background="@drawable/amrap"
        android:contentDescription="@string/amprap"
        app:layout_constraintBottom_toBottomOf="@+id/adView_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsimplywod"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/fortime"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/fortime"
        android:contentDescription="@string/for_time"
        app:layout_constraintBottom_toBottomOf="@+id/adView_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/emom"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/tabata"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/tabata"
        android:contentDescription="tabata"
        app:layout_constraintBottom_toBottomOf="@+id/adView_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fortime"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/emom"
        android:layout_width="253dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/emom"
        android:contentDescription="emom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/amrap"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvsimplywod"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="simplywod"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.011" />

    <TextView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TIMER"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvsimplywod" />
    <ImageView
        android:id="@+id/menu_button"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Menu"
        android:src="@drawable/ic_menu"
        ads:layout_constraintBottom_toTopOf="@+id/tvsimplywod"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.015"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent"
        ads:layout_constraintVertical_bias="0.085" />




</androidx.constraintlayout.widget.ConstraintLayout>