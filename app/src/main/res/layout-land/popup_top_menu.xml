<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popupContainer"
    android:layout_width="wrap_content"
    android:minWidth="400dp"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:elevation="16dp"
    android:background="@drawable/default_bg_4"
    android:outlineProvider="background"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp">

    <!-- Left Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingEnd="4dp">

        <Button
            android:id="@+id/home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:gravity="left"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bWorkoutlog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workout_logs"
            android:textAllCaps="false"
            android:gravity="left"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bAnalytics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/analytics"
            android:textAllCaps="false"
            android:gravity="left"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bBackground_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_layout_background"
            android:gravity="left"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bRecommend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recommend_app"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:gravity="left"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

    </LinearLayout>

    <!-- Right Column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="4dp">

        <Button
            android:id="@+id/bRateUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rate_app"
            android:gravity="left"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bRequestfeatures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/request_features"
            android:gravity="left"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bLanguage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_language"
            android:gravity="left"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <Button
            android:id="@+id/bSubscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/subscription_page"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:gravity="left"
            android:visibility="gone"
            android:fontFamily="sans-serif-light"
            android:background="@drawable/default_bg_4"
            android:layout_marginBottom="2dp"/>

        <!-- Spacer to balance the columns since left has 5 items and right has 4 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>