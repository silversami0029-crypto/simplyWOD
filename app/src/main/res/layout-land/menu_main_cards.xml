<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="16dp"
    tools:context="com.bessadi.fitwod.Menu_Activity">

    <!-- Left Side: Content (70% width) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvAppTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="simplyWOD"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            android:layout_marginBottom="32dp"/>

        <!-- Main Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/mainCard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@android:color/transparent">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                android:padding="16dp"
                android:background="@android:color/transparent">

                <!-- AMRAP Button with Icon -->
                <LinearLayout
                    android:id="@+id/amrap"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/button_custom_selector_amrap"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_amrap"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMRAP"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- EMOM Button with Icon -->
                <LinearLayout
                    android:id="@+id/emom"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/button_custom_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_emom"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EMOM"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- FOR TIME Button with Icon -->
                <LinearLayout
                    android:id="@+id/fortime"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/button_custom_selector_fortime"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_fortime"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="FOR TIME"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- TABATA Button with Icon -->
                <LinearLayout
                    android:id="@+id/tabata"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/button_custom_selector_tabata"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="4dp"
                        android:src="@drawable/ic_tabata_1"
                        app:tint="@color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="TABATA"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </GridLayout>
        </androidx.cardview.widget.CardView>

        <!-- Ad Banner -->
        <com.google.android.gms.ads.AdView
            android:id="@+id/adView_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:adSize="BANNER"
            app:adUnitId="@string/banner_id_1" />

    </LinearLayout>

    <!-- Right Side: Icons and Settings (30% width) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingStart="16dp">

        <!-- Settings Icon -->
        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_settings"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/settings"
            android:layout_marginBottom="24dp"
            android:visibility="gone"/>

        <!-- Menu Button -->
        <ImageView
            android:id="@+id/menu_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu"
            android:contentDescription="Menu"
            android:layout_marginBottom="24dp"/>

        <!-- Bottom Icons Container -->
        <LinearLayout
            android:id="@+id/bottomIconContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Analytics Icon -->
            <ImageButton
                android:id="@+id/btnAnalytics"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/analytics"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"
                android:contentDescription="Analytics"
                android:layout_marginBottom="16dp"/>

            <!-- Trophy -->
            <ImageButton
                android:id="@+id/btnAchieve"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/trophy"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Achievements"
                tools:ignore="ContentDescription"
                android:layout_marginBottom="16dp"/>

            <!-- Log Icon -->
            <ImageButton
                android:id="@+id/btnLog"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_history"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Workout Log"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>