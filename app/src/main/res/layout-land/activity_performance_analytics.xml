<!-- res/layout/activity_performance_analytics.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <!-- back button -->
        <ImageButton
            android:id="@+id/ib_back_per"
            android:layout_width="@dimen/button_width"
            android:layout_height="48dp"
            android:background="@color/black"
            android:contentDescription="@string/ib_desc"
            android:src="@drawable/arrow_white"/>

        <!-- Filter Spinner -->

        <!--Visibility of achievements-->
        <TextView
            android:id="@+id/achievementsTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/achievements"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:gravity="center"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/achievementsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:listitem="@layout/item_achievement"/>

        <!-- Workout Type Distribution -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/workout_type_distribution"
            android:textColor="@color/max_green"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/chartWorkoutTypes"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"/>

        <!-- Progress Over Time -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/progress_over_time"
            android:textColor="@color/max_green"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chartProgress"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="24dp"/>

        <!-- Statistics Cards -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/performance_summary"
            android:textColor="@color/max_green"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <!-- Total Workouts Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/button_width"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardBackgroundColor="@color/cardview_dark_background"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTotalWorkouts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128"
                        android:textColor="@color/max_green"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_workouts"
                        android:textColor="@color/max_green"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Total Duration Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/button_width"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/cardview_dark_background"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvTotalDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24h 38m"
                        android:textColor="@color/max_green"
                        android:textSize="24sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/total_duration"
                        android:textColor="@color/max_green"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Personal Records -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/personal_records"
            android:textColor="@color/max_green"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>
    </LinearLayout>
</ScrollView>